@model IEnumerable<DataRooms.UI.Models.ItemTrackerHistory>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="tbl-header" style="background-color: #7a73cf !important ">
            <th>User</th>
            <th>Column Name</th>
            <th>Old Value</th>
            <th>New Value</th>
            <th>Created On</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CreatedByName</td>
                    <td>@item.ColumnName</td>
                    <td>@item.OldValue</td>
                    <td>@item.NewValue</td>
                    <td>@item.CreatedOn.ToApplicationFormat()</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No History Found</td>
            </tr>
        }
    </tbody>
</table>

