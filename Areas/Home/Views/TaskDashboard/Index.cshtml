
@{
    ViewBag.Title = "Task Dashboard";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}


<!-- Content Header (Page header) -->
<div class="content-header pb-0">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">My Dashboard</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid border-top">
        <div class="row mt-3">
            <div class="col-lg-3 col-md-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <p>Pendding for Reveiw</p>
                        <h3 class="lnkReview" style="cursor:pointer">@ViewBag.ReviewCount</h3>
                    </div>
                    <span href="#" class="small-box-footer"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <p>Pendding for Approval</p>
                        <h3 class="lnkApproval" style="cursor:pointer">@ViewBag.ApprovalCount</h3>
                    </div>
                    <span href="#" class="small-box-footer"></span>
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
