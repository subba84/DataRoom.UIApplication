@model List<DataRooms.UI.Models.Module>

@{
    ViewBag.Title = "Activate";
    Layout = null;
}

<style>
    body {
        font-size: 1.5rem !important;
    }

    .tbl {
        overflow-x: hidden !important;
        overflow: auto;
    }

    input.form-control.form-control-sm {
        height: 30px;
    }

    @@media screen and (max-width: 600px) {
        .tbl {
            overflow-x: auto !important;
            overflow: auto;
        }
    }
</style>

<div class="container-fluid">
    <div class="row" style="background-color: #eee;height:100px;">
        <div class="col-md-4">
            <img src="~/Content/dist/img/logo-icon.png" alt="Mountain" style="height: 100px; padding: 12px;">
        </div>
    </div>
</div>
<div class="container" style="padding-top: 70px;">
    <div class="tbl">
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            <table id="example" class="table table-striped table-bordered" style="overflow: auto;">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Module Name</th>
                        <th>Module Count</th>
                        <th>License Status</th>
                        <th>From Date</th>
                        <th>To Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var module in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@module.ModuleName</td>
                            <td>@module.ModuleCount</td>
                            <td>@module.LicenseStatus</td>
                            <td>@module.FromDate</td>
                            <td>@module.ToDate</td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
            <div>
                <input type="button" class="btn btn-success" value="Next" id="btnNext" />
            </div>
        }
        else
        {
            <div>
                No Modules Available.
            </div>
        }
    </div>
</div>


<link rel="stylesheet" href="~/Content/dist/css/sharbox.min.css">
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>

    $("#btnNext").click(function () {
        window.location.href = "@Url.Action("Activate", "Activate",new { area = "Activation"})?flag=re-activate";
    });
</script>