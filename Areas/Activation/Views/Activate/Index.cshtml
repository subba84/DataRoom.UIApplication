
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <title>SharBox - Activation</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        label {
            font-weight: bold;
        }
    </style>
    <link rel="stylesheet" href="~/Content/dist/css/sharbox.min.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row" style="background-color: #eee;height:100px;">
            <div class="col-md-4">
                <img src="~/Content/dist/img/logo-icon.png" alt="Mountain" style="height: 100px; padding: 12px;">
            </div>
        </div>
    </div>


    <div class="container" style="padding-top: 70px;">
        <div class="card" style="padding:50px;">
            <div class="row">
                <div class="col-md-5">
                </div>
                <div class="col-md-4">
                    <input class="btn btn-success" type="submit" value="Activate" id="btnActivate" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $("#btnActivate").click(function () {
        window.location.href = "@Url.Action("Activate","Activate",new { area = "Activation"})";
    });
</script>

