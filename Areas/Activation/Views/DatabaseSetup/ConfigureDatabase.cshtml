@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <title>SharBox - DB Setup</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        label {
            font-weight: bold;
        }
    </style>
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/Content/dist/css/sharbox.min.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row" style="background-color: #eee;height:100px;">
            <div class="col-md-4">
                <img src="~/Content/dist/img/logo-icon.png" alt="Mountain" style="height: 100px; padding: 12px;">
            </div>
        </div>
    </div>


    <div class="container" style="padding-top: 70px;">
        <div class="card" style="padding:50px;">
            <form method="post" action="@Url.Action("ConfigureDatabase","DatabaseSetup",new { area = "Activation"})">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">DB Host Name</label>
                            <input type="text" class="form-control" id="txtHostName" name="DBHostName" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">User Id</label>
                            <input type="text" class="form-control" id="txtUserId" name="UserId" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Password</label>
                            <input type="password" class="form-control" id="txtPassword" name="Password" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Domain Name</label>
                            <input type="text" class="form-control" id="txtDomainname" name="DomainName" />
                        </div>
                    </div>
                </div><br>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">IP Address</label>
                            <input type="text" class="form-control" id="txtIPAddress" name="PublicIp" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email Id</label>
                            <input type="text" class="form-control" id="txtEmailId" name="EmailId" />
                        </div>
                    </div>
                </div><br>
                <input class="btn btn-success" type="submit" value="Submit" id="btnSubmit" />
            </form>
        </div>

    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).on("click", "#btnSubmit", function () {
        var dbhostname = $("#txtHostName").val();
        var userid = $("#txtUserId").val();
        var password = $("#txtPassword").val();
        var domainname = $("#txtDomainname").val();
        var ipaddress = $("#txtIPAddress").val();
        var emailid = $("#txtEmailId").val();
        if (dbhostname == null || dbhostname == "") {
            $("#txtHostName").css({ "border-color": "red" });
            return false;
        }
        else {
            $("#txtHostName").css({ "border-color": "black" });
        }
        if (userid == null || userid == "") {
            $("#txtUserId").css({ "border-color": "red" });
            return false;
        }
        else {
            $("#txtUserId").css({ "border-color": "black" });
        }
        if (password == null || password == "") {
            $("#txtPassword").css({ "border-color": "red" });
            return false;
        }
        else {
            $("#txtPassword").css({ "border-color": "black" });
        }
        if (domainname == null || domainname == "") {
            $("#txtDomainname").css({ "border-color": "red" });
            return false;
        }
        else {
            $("#txtDomainname").css({ "border-color": "black" });
        }
        if (ipaddress == null || ipaddress == "") {
            $("#txtIPAddress").css({ "border-color": "red" });
            return false;
        }
        else {
            $("#txtIPAddress").css({ "border-color": "black" });
        }
        if (emailid == null || emailid == "") {
            $("#txtEmailId").css({ "border-color": "red" });
            return false;
        }
        else {
            $("#txtEmailId").css({ "border-color": "black" });
        }
    });
</script>
